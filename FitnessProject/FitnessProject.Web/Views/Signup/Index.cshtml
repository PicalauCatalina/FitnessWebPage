@{
    Layout = "~/Views/Shared/_Layout_Blank.cshtml";
}

@using System.Web.Optimization
@model FitnessProject.Web.Models.UserSignup

@Html.ValidationSummary(true)
@using (Html.BeginForm("Index", "Signup", FormMethod.Post, new { @id = "SignupForm" }))
{
    <div class="container py-5 h-100">
        <div class="authincation-content">
            <div class="row">
                <div class="col-xl-12">
                    <div class="auth-form">
                        <h4 class="text-center mb-4">Sign up</h4>
                        <div class="row d-flex justify-content-center h-100 align-items-center">
                            <div class="col-xl-6 ">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Username, new
                                    {
                                        placeholder = "Username",
                                        title = "Please enter you username",
                                        value = "",
                                        name = "username",
                                        id = "username",
                                        @class = "form-control"
                                    })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Email, new
                                    {
                                        @class = "form-control",
                                        type = "email",
                                        title = "Please enter your email",
                                        placeholder = "Email",
                                        value = "",
                                        name = "email",
                                        id = "email"
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Password, new
                                    {
                                        @class = "form-control",
                                        type = "password",
                                        title = "Please enter your password",
                                        placeholder = "******",
                                        value = "",
                                        name = "password",
                                        id = "password"
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.ConfirmPassword, new
                                    {
                                        @class = "form-control",
                                        type = "password",
                                        title = "Please confirm your password",
                                        placeholder = "******",
                                        value = "",
                                        name = "confirmPassword",
                                        id = "confirmPassword"
                                    })
                                </div>
                                <div class="form-group ">
                                    @Html.LabelFor(m => m.Gender, new { @class = "control-label" })
                                    <div class="radio" style="margin-bottom: 45px">
                                        <label>
                                            @Html.RadioButtonFor(m => m.Gender, "Male") Male
                                        </label>
                                        <label>
                                            @Html.RadioButtonFor(m => m.Gender, "Female") Female
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-6">
                                <div class="form-group">
                                    @Html.Label("Age", "Age", new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Age, new
                                    {
                                        placeholder = "Age",
                                        title = "Please enter your age",
                                        value = "",
                                        name = "age",
                                        id = "age",
                                        @class = "form-control",
                                        type = "number",
                                        min = "0"
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Weight, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Weight, new
                                    {
                                        placeholder = "Weight (kg)",
                                        title = "Please enter your weight",
                                        value = "",
                                        name = "weight",
                                        id = "weight",
                                        @class = "form-control",
                                        type = "number",
                                        step = "0.01"
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.WeightTarget, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.WeightTarget, new
                                    {
                                        placeholder = "Weight Target (kg)",
                                        title = "Please enter your weight target",
                                        value = "",
                                        name = "weight_target",
                                        id = "weight_target",
                                        @class = "form-control",
                                        type = "number",
                                        step = "0.01"
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Height, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Height, new
                                    {
                                        @class = "form-control",
                                        type = "number",
                                        title = "Please enter your height in centimeters",
                                        placeholder = "Height (cm)",
                                        value = "",
                                        name = "height",
                                        id = "height",
                                        step = "1"
                                    })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.WorkoutPacketId)
                                    @Html.DropDownListFor(m => m.WorkoutPacketId, Model.WorkoutPacketIdList, new { @class = "form-control" })

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="text-center mt-4">
                                        <button type="submit" class="btn btn-primary btn-block">Sign me up</button>
                                    </div>

                                    <div class="new-account mt-3">
                                        <p>Already have an account? <a class="text-primary" href="/Login/Index">Sign in</a></p>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@Scripts.Render("~/bundles/validation/js")

<script type="text/javascript">

     $(function () {
          $("#LoginForm").validate({
               rules: {
                    Username: {
                         required: true
                    },
                    Password: {
                         required: true
                    }
               },
               submitHandler: function (form) {
                    form.submit();
               },
               errorPlacement: function (error, element) {
                    $(element)
                         .closest("form")
                         .find("label[for='" + element.attr("id") + "']")
                         .append(error);
               },
               errorElement: "span"
          });
     });
</script>