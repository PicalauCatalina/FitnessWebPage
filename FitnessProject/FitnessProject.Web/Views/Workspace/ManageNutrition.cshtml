@model FitnessProject.Web.Models.GlobalModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
     <div class="container-fluid">
          <div class="row">
               <div class="col-xl col-md-6">

                    <h2>Food Record </h2>
                    <h4>The nutritional parameters are recorded per 100 grams</h4>
                    <div class="card-body">
                         <div id="radialBar"></div>
                         <a href="#" type="button" class="btn btn-outline-primary rounded" data-toggle="modal" data-target="#itemModal">Add item</a>
                         @using (Html.BeginForm("ManageNutrition", "Workspace", FormMethod.Post))
                         {
                              <div class="modal fade" id="itemModal" tabindex="-1" role="dialog" aria-labelledby="itemModalLabel" aria-hidden="true">
                                   <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                             <div class="modal-header">
                                                  <h4 class="modal-title" id="itemModalLabel">Item Details</h4>
                                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                       <span aria-hidden="true">&times;</span>
                                                  </button>
                                             </div>
                                             <div class="modal-body">
                                                  <div class="form-group" id="name_form">
                                                       @Html.LabelFor(m => m.NutritionData.Name, new { @class = "control-label" })
                                                       @Html.TextBoxFor(m => m.NutritionData.Name, new
                                                       {
                                                            placeholder = "Enter item's name",
                                                            title = "Please enter item's name",
                                                            name = "itemname",
                                                            id = "itemname",
                                                            @class = "form-control"
                                                       })
                                                  </div>
                                                  <div class="form-group" id="protein_form">
                                                       @Html.LabelFor(m => m.NutritionData.Protein, new { @class = "control-label" })
                                                       @Html.TextBoxFor(m => m.NutritionData.Protein, new
                                                       {
                                                            placeholder = "Enter protein's number",
                                                            title = "Please enter protein's number",
                                                            type = "number",
                                                            name = "protein",
                                                            id = "protein",
                                                            @class = "form-control"
                                                       })
                                                  </div>
                                                  <div class="form-group" id="fat_form">
                                                       @Html.LabelFor(m => m.NutritionData.Fat, new { @class = "control-label" })
                                                       @Html.TextBoxFor(m => m.NutritionData.Fat, new
                                                  {
                                                      placeholder = "Enter fat's number",
                                                      title = "Please enter fat's number",
                                                      type = "number",
                                                      name = "fat",
                                                      id = "fat",
                                                      @class = "form-control"
                                                  })
                                                  </div>
                                                  <div class="form-group" id="carbohydrate_form">
                                                       @Html.LabelFor(m => m.NutritionData.Carbohydrate, new { @class = "control-label" })
                                                       @Html.TextBoxFor(m => m.NutritionData.Carbohydrate, new
                                                       {
                                                            placeholder = "Enter carbohydrate's number",
                                                            title = "Please enter carbohydrate's number",
                                                            type = "number",
                                                            name = "carbohydrate",
                                                            id = "carbohydrate",
                                                            @class = "form-control"
                                                       })
                                                  </div>
                                                  <div class="modal-footer">
                                                       <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                       <button type="submit" class="btn btn-primary">Save changes</button>
                                                  </div>
                                             </div>
                                        </div>
                                   </div>
                              </div>
                              <table id="FoodTable" class="table table-striped table-bordered" style="width:100%;font-size: 20px;">

                                   <thead>
                                        <tr>
                                             <th>ID</th>
                                             <th>Name</th>
                                             <th>Protein</th>
                                             <th>Fat</th>
                                             <th>Carbohydrate</th>
                                             <th>Energy value</th>
                                             <th>Action</th>
                                        </tr>
                                   </thead>
                                   <tbody>

                                        @foreach (var item in Model.NutritionList)
                                        {
                                             <tr>
                                                  <td>@item.Id</td>
                                                  <td>@item.Name</td>
                                                  <td>@item.Protein</td>
                                                  <td>@item.Fat</td>
                                                  <td>@item.Carbohydrate</td>
                                                  <td>@item.EnergyValue</td>
                                                  <td>
                                                       <button class="btn btn-info btn-sm">Edit</button>
                                                       <button class="btn btn-danger btn-sm">Delete</button>
                                                  </td>
                                             </tr>
                                        }
                                   </tbody>
                              </table>
                         }
                    </div>
               </div>
          </div>
     </div>
</div>
